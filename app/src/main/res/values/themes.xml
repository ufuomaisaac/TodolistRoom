<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700 </item>
        <item name="colorPrimaryVariant">@color/holo_green_dark</item>
        <item name="colorOnPrimary">@color/teal_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/holo_green_dark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/holo_green_dark</item>
        <item name="android:textColor">@color/teal_700</item>

    </style>

    <style name="AppCompatDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <!-- Customize button attributes as needed -->
        <item name="android:textColor">@color/teal_700</item>
        <!-- Add more button customizations here -->
    </style>

    <style name="Mifos.DesignSystem.Components.HorizontalSpacer" parent="android:Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOnSurface</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="Mifos.DesignSystem.Components.Button.Text" parent="Widget.Material3.Button.TextButton"/>


